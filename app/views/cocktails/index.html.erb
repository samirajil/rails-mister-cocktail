<div class="card-container">
<% @cocktails.each do |cocktail| %>
<div class="card mb-3 w-90">
  <div class="row no-gutters">
      <div class = "card-image">
        <%= cl_image_tag(cocktail.photo.key, height: 100, width: 100, crop: :fill) %>
      </div>
      <div class="col">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <p class="card-text"><%= link_to "Show Details", cocktail_path(cocktail) %></p>
        </div>
      </div>
  </div>
</div>
<% end %>
</div>

