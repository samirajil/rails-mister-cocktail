<h3>These are all the amazing cocktails on our menu:</h3>

<% @cocktails.each do |cocktail| %>
<div class="card mb-3 w-90">
  <div class="row no-gutters">
      <div class = "card-image">
         <%= image_tag "#{@images.sample(1).join}", class: "card-img p-2" %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <p class="card-text"><%= link_to "Show Details", cocktail_path(cocktail) %></p>
        </div>
      </div>
  </div>
</div>
<% end %>
