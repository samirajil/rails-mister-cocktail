<div class="form-box">
  <div class="d-flex flex-column align-items-center">
  <div class="d-flex align-items-center mb-4">
    <h3 class="mr-4 mb-0"><%= @cocktail.name %></h3>
    <%= link_to favorites_cocktail_path(@cocktail), method: :post, class: "#{@cocktail.favorites ? 'fas fa-heart' : 'far fa-heart'}" do %>
      <i></i>
    <% end%>
  </div>
    <%= cl_image_tag(@cocktail.photo.key, height: 100, width: 100, crop: :fill) %>
    <h5 class="mt-5">Ingredients:</h5>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %><%= link_to "  ðŸ—‘", dose_path(dose.id), method: :delete, data: {confirm: "Are you sure?"}%></li>
      <% end %>
      <li><%= link_to "Add more ingredients", new_cocktail_dose_path(@cocktail) %></li>
    </ul>
  </div>
</div>

